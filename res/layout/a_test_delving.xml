<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ta2_bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TestActivity2" >

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/ta2_previous"
            style="@style/button_list_selector"
            android:text="@string/previous" />

        <Button
            android:id="@+id/ta2_next"
            style="@style/button_list_selector"
            android:text="@string/next" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_margin="5dip"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/ta2_noun"
            style="@style/textview_label_types_top"
            android:text="@string/nn" />

        <TextView
            android:id="@+id/ta2_verb"
            style="@style/textview_label_types_top"
            android:text="@string/vb" />

        <TextView
            android:id="@+id/ta2_adj"
            style="@style/textview_label_types_top"
            android:text="@string/adj" />

        <TextView
            android:id="@+id/ta2_adv"
            style="@style/textview_label_types_top"
            android:text="@string/adv" />

        <TextView
            android:id="@+id/ta2_phrasal"
            style="@style/textview_label_types_top"
            android:text="@string/ph.v" />

        <TextView
            android:id="@+id/ta2_expression"
            style="@style/textview_label_types_top"
            android:text="@string/exp" />

        <TextView
            android:id="@+id/ta2_other"
            style="@style/textview_label_types_top"
            android:text="@string/oth" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/linearLayout2"
        android:layout_below="@+id/linearLayout1"
        android:orientation="vertical"
        android:paddingLeft="5dip"
        android:paddingRight="5dip" >

        <TextView
            android:id="@+id/ta2_delv"
            style="@style/text_mw1_center_large"
            android:paddingTop="10dip"
            android:textSize="28sp" />

        <TextView
            android:id="@+id/ta2_delv_p"
            style="@style/text_mw1_center_large"
            android:gravity="top|center"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <View style="@style/divisor" />

        <TextView
            android:id="@+id/ta2_nativ"
            style="@style/text_mw1_center_large"
            android:paddingTop="10dip"
            android:textSize="28sp" />

        <TextView
            android:id="@+id/ta2_nativ_p"
            style="@style/text_mw1_center_large"
            android:gravity="top|center"
            android:textAppearance="?android:attr/textAppearanceMedium" />
    </LinearLayout>

</RelativeLayout>