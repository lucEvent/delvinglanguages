<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/background"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="10dip"
        android:paddingRight="10dip" >

        <!-- ************** GENERAL ************** -->

        <TextView
            style="@style/settings_indexs"
            android:text="@string/general" />

        <View style="@style/divisor" />

        <Button
            style="@style/settings_option"
            android:onClick="changeLanguageName"
            android:text="@string/languagename" />

        <TextView
            style="@style/settings_indexs"
            android:text="@string/parameters" />

        <View style="@style/divisor" />

        <CheckedTextView
            android:id="@+id/phrasal_state"
            style="@style/settings_option"
            android:checkMark="?android:attr/listChoiceIndicatorMultiple"
            android:clickable="true"
            android:gravity="center_vertical"
            android:onClick="togglePhrasalState"
            android:paddingRight="20dip"
            android:text="@string/phrasalsenabled" />

        <View
            style="@style/divisor"
            android:layout_height="0.5dip"
            android:background="#B7B7B7" />

        <CheckedTextView
            android:id="@+id/adjective_state"
            style="@style/settings_option"
            android:checkMark="?android:attr/listChoiceIndicatorMultiple"
            android:clickable="true"
            android:gravity="center_vertical"
            android:onClick="toggleAdjectiveState"
            android:paddingRight="20dip"
            android:text="@string/adjectsenabled" />

        <View
            style="@style/divisor"
            android:layout_height="0.5dip"
            android:background="#B7B7B7" />

        <CheckedTextView
            android:id="@+id/special_chars_state"
            style="@style/settings_option"
            android:checkMark="?android:attr/listChoiceIndicatorMultiple"
            android:clickable="true"
            android:gravity="center_vertical"
            android:onClick="toggleSpecialCharacterState"
            android:paddingRight="20dip"
            android:text="@string/special_chars_enabled" />

        <TextView
            style="@style/settings_indexs"
            android:text="@string/actions" />

        <View style="@style/divisor" />

        <Button
            style="@style/settings_option"
            android:onClick="integrate"
            android:text="@string/integratelang" />

        <View
            style="@style/divisor"
            android:layout_height="0.5dip"
            android:background="#B7B7B7" />

        <Button
            style="@style/settings_option"
            android:onClick="remove"
            android:text="@string/remove" />

        <View
            style="@style/divisor"
            android:layout_height="0.5dip"
            android:background="#B7B7B7" />

        <Button
            style="@style/settings_option"
            android:onClick="clearStatistics"
            android:text="@string/clearstatistics" />
    </LinearLayout>

</ScrollView>