<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ImageButton
        android:id="@+id/toggle_dic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/table"
        android:layout_margin="5dip"
        android:background="@drawable/button"
        android:clickable="true"
        android:contentDescription="Toggle dictionary"
        android:focusable="true"
        android:padding="5dip"
        android:src="@drawable/change_direction" />

    <TableLayout
        android:id="@+id/table"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:stretchColumns="*" >

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                style="@style/label_types_idiom"
                android:background="@color/noun"
                android:text="@string/nn" />

            <TextView
                style="@style/label_types_idiom"
                android:background="@color/verb"
                android:text="@string/vb" />

            <TextView
                style="@style/label_types_idiom"
                android:background="@color/adjective"
                android:text="@string/adj" />

            <TextView
                style="@style/label_types_idiom"
                android:background="@color/adverb"
                android:text="@string/adv" />

            <TextView
                android:id="@+id/phrasal_title"
                style="@style/label_types_idiom"
                android:background="@color/phrasal"
                android:text="@string/ph.v" />

            <TextView
                style="@style/label_types_idiom"
                android:background="@color/expression"
                android:text="@string/exp" />

            <TextView
                style="@style/label_types_idiom"
                android:background="@color/other"
                android:text="@string/oth" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/noun"
                style="@style/label_types_idiom"
                android:background="@color/noun" />

            <TextView
                android:id="@+id/verb"
                style="@style/label_types_idiom"
                android:background="@color/verb" />

            <TextView
                android:id="@+id/adjective"
                style="@style/label_types_idiom"
                android:background="@color/adjective" />

            <TextView
                android:id="@+id/adverb"
                style="@style/label_types_idiom"
                android:background="@color/adverb" />

            <TextView
                android:id="@+id/phrasal"
                style="@style/label_types_idiom"
                android:background="@color/phrasal" />

            <TextView
                android:id="@+id/expression"
                style="@style/label_types_idiom"
                android:background="@color/expression" />

            <TextView
                android:id="@+id/other"
                style="@style/label_types_idiom"
                android:background="@color/other" />
        </TableRow>
    </TableLayout>

    <ProgressBar
        android:id="@+id/progressbar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/table"
        android:layout_marginTop="-7dp"
        android:visibility="invisible" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/progressbar" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="@dimen/laymarleft"
            android:paddingRight="@dimen/laymarright" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingBottom="@dimen/margenlabels"
                android:paddingTop="@dimen/margenlabels"
                android:text="@string/statistics"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textStyle="bold" />

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:stretchColumns="*" >

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <TextView
                        style="@style/textview_statistics"
                        android:maxLines="1"
                        android:text="@string/attemps" />

                    <TextView
                        android:id="@+id/as_na"
                        style="@style/textview_statistics" />

                    <TextView style="@style/textview_statistics" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <TextView
                        style="@style/textview_statistics"
                        android:maxLines="1"
                        android:text="@string/success1" />

                    <TextView
                        android:id="@+id/as_ns1"
                        style="@style/textview_statistics" />

                    <TextView
                        android:id="@+id/as_ns1p"
                        style="@style/textview_statistics" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <TextView
                        style="@style/textview_statistics"
                        android:maxLines="1"
                        android:text="@string/success2" />

                    <TextView
                        android:id="@+id/as_ns2"
                        style="@style/textview_statistics" />

                    <TextView
                        android:id="@+id/as_ns2p"
                        style="@style/textview_statistics" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <TextView
                        style="@style/textview_statistics"
                        android:maxLines="1"
                        android:text="@string/success3" />

                    <TextView
                        android:id="@+id/as_ns3"
                        style="@style/textview_statistics" />

                    <TextView
                        android:id="@+id/as_ns3p"
                        style="@style/textview_statistics" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <TextView
                        style="@style/textview_statistics"
                        android:maxLines="1"
                        android:text="@string/failures" />

                    <TextView
                        android:id="@+id/as_nf"
                        style="@style/textview_statistics" />

                    <TextView
                        android:id="@+id/as_nfp"
                        style="@style/textview_statistics" />
                </TableRow>
            </TableLayout>

            <Button
                android:id="@+id/newword"
                style="@style/button_list_selector"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/newword" />
        </LinearLayout>
    </ScrollView>

</RelativeLayout>