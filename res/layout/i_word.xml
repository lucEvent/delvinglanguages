<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentTop="true"
    android:orientation="vertical"
    android:paddingLeft="5dip"
    android:paddingRight="5dip" >

    <TextView
        android:id="@+id/word"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:maxLines="1"
        android:text="La palabra"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#FF000000"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/translation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:layout_marginLeft="10dip"
        android:maxLines="1"
        android:text="La traduccion"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="#FF444444" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dip"
        android:layout_marginTop="5dip"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/noun"
            style="@style/textview_label_types_small"
            android:text="@string/nn" />

        <TextView
            android:id="@+id/verb"
            style="@style/textview_label_types_small"
            android:text="@string/vb" />

        <TextView
            android:id="@+id/adj"
            style="@style/textview_label_types_small"
            android:text="@string/adj" />

        <TextView
            android:id="@+id/adverb"
            style="@style/textview_label_types_small"
            android:text="@string/adv" />

        <TextView
            android:id="@+id/phrasal"
            style="@style/textview_label_types_small"
            android:text="@string/phv" />

        <TextView
            android:id="@+id/expression"
            style="@style/textview_label_types_small"
            android:text="@string/exp" />

        <TextView
            android:id="@+id/other"
            style="@style/textview_label_types_small"
            android:text="@string/oth" />
    </LinearLayout>

</LinearLayout>