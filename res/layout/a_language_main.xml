<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true" >

    <FrameLayout
        android:id="@+id/fragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
    </FrameLayout>

    <RelativeLayout
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom" >

        <TextView
            android:id="@+id/touchpad"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:drawableBottom="@android:drawable/arrow_down_float"
            android:focusableInTouchMode="true" />

        <RelativeLayout
            android:id="@+id/options"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/touchpad" >

            <LinearLayout
                android:id="@+id/optionsleft"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_toLeftOf="@+id/delv"
                android:orientation="vertical" >

                <Button
                    style="@style/button_list_selector"
                    android:layout_width="match_parent"
                    android:onClick="jumptoPractise"
                    android:text="@string/practise" />

                <Button
                    style="@style/button_list_selector"
                    android:layout_width="match_parent"
                    android:onClick="jumptoWarehouse"
                    android:text="@string/Warehouse" />
            </LinearLayout>

            <ImageButton
                android:id="@+id/delv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/optionsleft"
                android:layout_alignTop="@+id/optionsleft"
                android:layout_centerHorizontal="true"
                android:layout_margin="2dip"
                android:background="#22222222"
                android:onClick="jumptoLanguageMain"
                android:src="@drawable/ic_launcher" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_toRightOf="@+id/delv"
                android:orientation="vertical" >

                <Button
                    style="@style/button_list_selector"
                    android:layout_width="match_parent"
                    android:onClick="jumptoDictionary"
                    android:text="@string/Dictionary" />

                <Button
                    style="@style/button_list_selector"
                    android:layout_width="match_parent"
                    android:onClick="jumptoOther"
                    android:text="@string/other" />
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>

</FrameLayout>