<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/buttons"
        android:layout_alignParentTop="true" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dip" >

            <TextView
                style="@style/textview_title"
                android:text="@string/wordstotest" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:padding="5dip" >

                <Button
                    android:id="@+id/less"
                    style="@style/buttons_complete"
                    android:text="@string/menos" />

                <TextView
                    android:id="@+id/number"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:maxLines="1"
                    android:minWidth="60dip"
                    android:textAlignment="center"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/more"
                    style="@style/buttons_complete"
                    android:text="@string/mas" />
            </LinearLayout>

            <TextView
                style="@style/textview_title"
                android:text="@string/selectingbetween" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <Button
                    android:id="@+id/noun"
                    style="@style/button_type_word"
                    android:background="@drawable/type_noun_backgrounds"
                    android:paddingLeft="10dip"
                    android:text="@string/nouns" />

                <Button
                    android:id="@+id/verb"
                    style="@style/button_type_word"
                    android:background="@drawable/type_verb_backgrounds"
                    android:text="@string/verbs" />

                <Button
                    android:id="@+id/adjective"
                    style="@style/button_type_word"
                    android:background="@drawable/type_adjective_backgrounds"
                    android:text="@string/adjectives" />

                <Button
                    android:id="@+id/adverb"
                    style="@style/button_type_word"
                    android:background="@drawable/type_adverb_backgrounds"
                    android:text="@string/adverbs" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <Button
                    android:id="@+id/phrasal"
                    style="@style/button_type_word"
                    android:background="@drawable/type_phrasal_backgrounds"
                    android:text="@string/phrasalverbs" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <Button
                    android:id="@+id/expression"
                    style="@style/button_type_word"
                    android:background="@drawable/type_expression_backgrounds"
                    android:text="@string/expressions" />

                <Button
                    android:id="@+id/other"
                    style="@style/button_type_word"
                    android:background="@drawable/type_other_backgrounds"
                    android:text="@string/others" />
            </LinearLayout>

            <TextView
                style="@style/textview_title"
                android:text="@string/testssaved" />

            <ListView
                android:id="@android:id/list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dip"
                android:layout_marginRight="1dip"
                android:orientation="vertical"
                tools:ignore="NestedScrolling" />
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true" >

        <Button
            style="@style/button_list_selector"
            android:onClick="cancel"
            android:text="@string/cancel" />

        <Button
            style="@style/button_list_selector"
            android:onClick="createTest"
            android:text="@string/gotest" />
    </LinearLayout>

</RelativeLayout>