<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true">

    <ScrollView
        android:id="@+id/scrollcontent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dip"
            android:layout_marginRight="5dip"
            android:orientation="vertical">

            <EditText
                android:id="@+id/word"
                style="@style/edittext_palabra"
                android:inputType="textCapSentences" />

            <EditText
                android:id="@+id/pronunciation"
                style="@style/edittext_palabra" />

            <Button
                android:id="@+id/addtranslation"
                style="@style/button_list_selector"
                android:layout_width="match_parent"
                android:onClick="addTranslation"
                android:text="Add Translation" />
        </LinearLayout>
    </ScrollView>

    <ListView
        android:id="@android:id/list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/options"
        android:layout_below="@+id/scrollcontent"
        android:divider="@android:color/transparent"
        android:dividerHeight="1sp"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:padding="5dip"></ListView>

    <LinearLayout
        android:id="@+id/options"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/letrasespeciales"
        android:layout_centerInParent="true">

        <Button
            android:id="@+id/cancel"
            style="@style/button_list_selector"
            android:onClick="cancel"
            android:text="@string/cancel" />

        <Button
            android:id="@+id/addmore"
            style="@style/button_list_selector"
            android:onClick="secondOption"
            android:text="@string/addmore" />

        <Button
            android:id="@+id/add"
            style="@style/button_list_selector"
            android:onClick="addWord"
            android:text="@string/add" />
    </LinearLayout>

    <include
        android:id="@+id/letrasespeciales"
        layout="@layout/v_special_letters"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/ap_keyboard" />

    <android.inputmethodservice.KeyboardView
        android:id="@+id/ap_keyboard"
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:focusable="true"
        android:focusableInTouchMode="true" />

</RelativeLayout>