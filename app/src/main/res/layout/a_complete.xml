<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/keyboard"
        android:layout_alignParentTop="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <include layout="@layout/v_types_bar" />

            <TextView
                android:id="@+id/word"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingTop="20dip"
                android:text="WORD"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/solution"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="30dip"
                android:text="SOLUTION"
                android:textSize="32sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/pronounce"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="30dip"
                android:text="PRONUNTIATION"
                android:textAppearance="?android:attr/textAppearanceLarge" />
        </LinearLayout>
    </ScrollView>

    <TableLayout
        android:id="@+id/keyboard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/key_a1"
                style="@style/buttons_complete" />

            <Button
                android:id="@+id/key_a2"
                style="@style/buttons_complete" />

            <Button
                android:id="@+id/key_a3"
                style="@style/buttons_complete" />

            <Button
                android:id="@+id/key_a4"
                style="@style/buttons_complete" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/key_b1"
                style="@style/buttons_complete" />

            <Button
                android:id="@+id/key_b2"
                style="@style/buttons_complete" />

            <Button
                android:id="@+id/key_b3"
                style="@style/buttons_complete" />

            <Button
                android:id="@+id/key_b4"
                style="@style/buttons_complete" />
        </TableRow>
    </TableLayout>

</RelativeLayout>