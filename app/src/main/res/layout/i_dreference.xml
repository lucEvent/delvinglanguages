<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_margin="5dip"
              android:background="@drawable/ripple"
              android:clickable="true"
              android:elevation="@dimen/list_item_elevation"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <View
            android:id="@+id/noun"
            style="@style/label_type_row"
            android:background="@color/noun"/>

        <View
            android:id="@+id/verb"
            style="@style/label_type_row"
            android:background="@color/verb"/>

        <View
            android:id="@+id/adjective"
            style="@style/label_type_row"
            android:background="@color/adjective"/>

        <View
            android:id="@+id/adverb"
            style="@style/label_type_row"
            android:background="@color/adverb"/>

        <View
            android:id="@+id/phrasal"
            style="@style/label_type_row"
            android:background="@color/phrasal"/>

        <View
            android:id="@+id/expression"
            style="@style/label_type_row"
            android:background="@color/expression"/>

        <View
            android:id="@+id/preposition"
            style="@style/label_type_row"
            android:background="@color/preposition"/>

        <View
            android:id="@+id/conjunction"
            style="@style/label_type_row"
            android:background="@color/conjunction"/>


        <View
            android:id="@+id/other"
            style="@style/label_type_row"
            android:background="@color/other"/>
    </LinearLayout>

    <TextView
        android:id="@+id/word"
        style="@style/list_item_title"/>

    <TextView
        android:id="@+id/translation"
        style="@style/list_item_subtitle"/>

</LinearLayout>