<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".view.activity.practise.PractiseWriteActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include
            android:id="@+id/bar_types"
            layout="@layout/v_bar_types"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true" />

        <ImageView
            android:id="@+id/configuration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/bar_types"
            android:background="@drawable/ripple_round"
            android:onClick="onConfigurationAction"
            android:padding="10dp"
            android:src="@drawable/ic_configuration"
            android:tint="@android:color/darker_gray" />

        <TextView
            android:id="@+id/reference_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/bar_types"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="30dp"
            android:padding="10dp"
            android:text="Reference_name"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/input"
            style="@style/input"
            android:layout_below="@+id/reference_name"
            android:layout_marginBottom="0dp"
            android:gravity="center_horizontal"
            android:hint="@string/hint_practise_write">

            <requestFocus />
        </EditText>

        <ProgressBar
            android:id="@+id/progress"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/input"
            android:layout_alignStart="@+id/input"
            android:layout_below="@+id/input"
            android:translationY="-8dp" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/progress"
            android:contentDescription="this view helps to keep the buttons align to the bottom. weird, i know" />

        <ImageButton
            android:id="@+id/next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:background="@drawable/ripple_round"
            android:onClick="onNextAction"
            android:padding="10dip"
            android:src="@drawable/ic_redo" />

        <ImageButton
            android:id="@+id/help"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:background="@drawable/ripple_round"
            android:onClick="onHelpAction"
            android:padding="10dip"
            android:src="@drawable/ic_help" />

    </RelativeLayout>

</android.support.design.widget.CoordinatorLayout>