<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:fitsSystemWindows="true"
    tools:context=".view.activity.practise.PractiseCompleteActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include
            android:id="@+id/bar_types"
            layout="@layout/v_bar_types"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"/>

        <ImageView
            android:id="@+id/configuration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/bar_types"
            android:background="@drawable/ripple_round"
            android:onClick="onConfigurationAction"
            android:padding="10dp"
            android:src="@drawable/ic_configuration"
            android:tint="@android:color/darker_gray"/>

        <TextView
            android:id="@+id/reference_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/bar_types"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="30dp"
            android:padding="10dp"
            android:text="Reference_name"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/reference_discovering"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/reference_name"
            android:layout_marginEnd="30dp"
            android:layout_marginStart="30dp"
            android:padding="30dip"
            android:text="SOLUTION"
            android:textAlignment="center"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="32sp"
            android:textStyle="bold"/>

        <LinearLayout
            android:id="@+id/keyboard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal">

            <Button
                android:id="@+id/key_a1"
                style="@style/Button_practise_complete"/>

            <Button
                android:id="@+id/key_b1"
                style="@style/Button_practise_complete"/>

            <Button
                android:id="@+id/key_a2"
                style="@style/Button_practise_complete"/>

            <Button
                android:id="@+id/key_b2"
                style="@style/Button_practise_complete"/>

            <Button
                android:id="@+id/key_a3"
                style="@style/Button_practise_complete"/>

            <Button
                android:id="@+id/key_b3"
                style="@style/Button_practise_complete"/>

            <Button
                android:id="@+id/key_a4"
                style="@style/Button_practise_complete"/>

            <Button
                android:id="@+id/key_b4"
                style="@style/Button_practise_complete"/>

        </LinearLayout>

    </RelativeLayout>
</android.support.design.widget.CoordinatorLayout>